{{#if article}}
​
 <ul>
  {{#each article}}
  <p id="title">{{this.title}}</p>
  <p id="summary">{{this.summary}}</p>
  <a href={{this.link}}>
   <p id="link">Link to original article</p>
  </a>
  <button type="button" class="btn saveButton" id="savebutton" data-id={{this._id}}>Save this article</button></button>
  <div></div>
  <button type="button" class="btn notesButton" id="notebutton" data-id={{this._id}}>Article Notes</button></button>
  <div></div>
  <br>
  {{/each}}
​
  {{else}}
  <h3>There are no new articles. Please scrape away!</h3>
  {{/if}}


